# API 端口
PORT=5001
# 允许的前端来源（CORS）
CLIENT_ORIGIN=http://localhost:5173
# Google OAuth 客户端 ID
GOOGLE_CLIENT_ID=
# Google OAuth 客户端密钥
GOOGLE_CLIENT_SECRET=
# Google OAuth 回调地址
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback
# Google OAuth 请求的 scopes，逗号分隔
GOOGLE_AUTH_SCOPES=openid,profile,email,https://www.googleapis.com/auth/yt-analytics.readonly,https://www.googleapis.com/auth/yt-analytics-monetary.readonly,https://www.googleapis.com/auth/youtube,https://www.googleapis.com/auth/youtubepartner
# JWT 签名密钥
JWT_SECRET=replace-with-a-secure-random-string
# JWT 过期时间（如 7d, 12h）
JWT_EXPIRES_IN=7d
# 会话 cookie 名称
SESSION_COOKIE_NAME=ya_session
# 会话 cookie 是否仅限 HTTPS
SESSION_COOKIE_SECURE=false
# 会话 cookie SameSite 设置：lax/strict/none
SESSION_COOKIE_SAMESITE=lax
# 数据库主机
DB_HOST=
# 数据库端口
DB_PORT=
# 数据库用户名
DB_USER=
# 数据库密码
DB_PASSWORD=
# 数据库库名
DB_NAME=

# Video Translate Service 基于 fast-whisper 的转写服务配置
VIDEO_TRANSLATE_SERVICE_BASE_URL=
# SSE 进度流超时（毫秒），默认 15 分钟
VIDEO_TRANSLATE_STREAM_TIMEOUT_MS=
# 默认模型（不从前端传），如 tiny/base
VIDEO_TRANSLATE_DEFAULT_MODEL=tiny
# 默认设备（cpu/gpu）
VIDEO_TRANSLATE_DEFAULT_DEVICE=cpu
# 默认算力类型（int8/float16 等）
VIDEO_TRANSLATE_DEFAULT_COMPUTE_TYPE=int8
# Node 与 Python 服务共享的签名密钥，用于请求鉴权
VIDEO_TRANSLATE_SHARED_SECRET=replace-with-a-secure-random-string

# Minio 对象存储配置
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=yvap
MINIO_SECRET_KEY=yval12345678
MINIO_BUCKET=yvap
MINIO_REGION=us-east-1
MINIO_PRESIGN_EXPIRY_SECONDS=3600

# Youtube 相关配置
YOUTUBE_API_KEY=
# Spotlight 频道列表，逗号分隔
SPOTLIGHT_CHANNEL_HANDLES=NDWTB,xiao_lin_shuo,moyutogether,hellobailu,Leisadventure,WorldwithCK,anzhengming,MaxBookClub,laogao,达叔的财智日记
# 是否启用 fetch 代理
ENABLE_FETCH_PROXY=false
